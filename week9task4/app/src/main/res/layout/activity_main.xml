<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/page1_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="페이지 1로 이동"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="172dp"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/page2_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/page1_button"
        android:text="페이지 2로 이동"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page1_button" />

    <Button
        android:id="@+id/page3_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/page2_button"
        android:text="페이지 3로 이동"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page2_button" />

</androidx.constraintlayout.widget.ConstraintLayout>