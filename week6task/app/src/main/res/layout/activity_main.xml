<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="45dp"
        android:gravity="right|bottom"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tableLayout" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:stretchColumns="0,1,2,3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableRow>
            <Button
                android:id="@+id/button1"
                android:onClick="onClick"
                android:text="/" />
            <Button
                android:id="@+id/button2"
                android:onClick="onClick"
                android:text="x" />
            <Button
                android:id="@+id/button3"
                android:onClick="onClick"
                android:text="-" />
            <Button
                android:id="@+id/button4"
                android:onClick="onClick"
                android:text="+" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/numButton7"
                android:onClick="onClick"
                android:text="7" />
            <Button
                android:id="@+id/numButton8"
                android:onClick="onClick"
                android:text="8" />
            <Button
                android:id="@+id/numButton9"
                android:onClick="onClick"
                android:text="9" />
            <Button
                android:id="@+id/button5"
                android:onClick="onClick"
                android:text="&lt;" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/numButton4"
                android:onClick="onClick"
                android:text="4" />
            <Button
                android:id="@+id/numButton5"
                android:onClick="onClick"
                android:text="5" />
            <Button
                android:id="@+id/numButton6"
                android:onClick="onClick"
                android:text="6" />
            <Button
                android:id="@+id/button6"
                android:onClick="onClick"
                android:text="ac" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/numButton1"
                android:onClick="onClick"
                android:text="1" />
            <Button
                android:id="@+id/numButton2"
                android:onClick="onClick"
                android:text="2" />
            <Button
                android:id="@+id/numButton3"
                android:onClick="onClick"
                android:text="3" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/numButton0"
                android:onClick="onClick"
                android:text="0"
                android:layout_span="2" />
            <Button
                android:id="@+id/button7"
                android:onClick="onClick"
                android:text="." />
            <Button
                android:id="@+id/button8"
                android:onClick="onClick"
                android:text="=" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
